<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_green_gradient_radius"
    android:contentDescription="@string/Confirmar">

    <TextView
        android:id="@+id/successfullRegisterTitle"
        style="@style/PoppinsSemiBold_20"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/SuccessfullRegisterTitleTV"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/succesfullRegisterDesc"
        style="@style/PoppinsSemiBold_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/SuccessfullRegisterDescTV"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successfullRegisterTitle" />

    <Button
        android:id="@+id/confirmSuccesfulRegisterBtn"
        style="@style/RectangleAzulnavi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:text="Entendido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/succesfullRegisterDesc" />

    <ImageView
        android:id="@+id/successfulRegisterIV"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/successfullRegisterTitle"
        app:layout_constraintStart_toEndOf="@+id/successfullRegisterTitle"
        app:srcCompat="@drawable/check24p" />

</androidx.constraintlayout.widget.ConstraintLayout>
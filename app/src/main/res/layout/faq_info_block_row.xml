<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FAQblockConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/linear_gradient_background"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/FAQBlockTitleTV"
        style="@style/PoppinsSemiBold_18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/FAQDeployBlockInfoBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/FAQDeployBlockInfoBtn"
        style="@style/BackArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/FAQBlockTitleTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/FAQBlockTitleTV"
        app:srcCompat="@drawable/expand_more24p" />

    <View
        android:id="@+id/FAQDividerTitleInfo"
        style="@style/Divider.HorizontalLight"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/FAQDeployBlockInfoBtn"
        app:layout_constraintStart_toStartOf="@+id/FAQBlockTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/FAQBlockTitleTV" />

    <TextView
        android:id="@+id/FAQBlockInfoTV"
        style="@style/PoppinsRegular_15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/FAQDeployBlockInfoBtn"
        app:layout_constraintStart_toStartOf="@+id/FAQBlockTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/FAQDividerTitleInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>
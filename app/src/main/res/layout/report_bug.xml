<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reporte_bug_box">

    <ImageView
        android:id="@+id/bugReportBugImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bugreport24p" />

    <EditText
        android:id="@+id/editTextTextMultiLineBugReport"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:paddingStart="3dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/reporte_bug_textbox"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start|top"
        android:hint="@string/infoSendBug"
        android:inputType="textMultiLine"
        android:textColorHint="@color/grayFigma"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/sendBugReportBtn"
        app:layout_constraintEnd_toEndOf="@+id/omitirBugImgReport"
        app:layout_constraintStart_toStartOf="@+id/bugReportBugImg"
        app:layout_constraintTop_toBottomOf="@+id/bugReportBugImg" />

    <TextView
        android:id="@+id/omitirBugImgReport"
        style="@style/PoppinsSemiBold_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:padding="10dp"
        android:text="@string/omitir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendBugReportBtn"
        style="@style/RectangleWGradientsemiBold_15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/reporte_bug_btn"
        android:text="@string/enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>